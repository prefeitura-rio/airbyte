{
  "streams": [
    {
      "stream": {
        "name": "documents",
        "json_schema": {
          "$schema": "http://json-schema.org/draft-04/schema#",
          "type": "object",
          "properties": {
            "id": {
              "type": "string"
            },
            "key": {
              "type": "string"
            },
            "value": {
              "type": ["object"],
              "properties": {
                "rev": {
                  "type": ["null", "string"]
                }
              }
            },
            "doc": {
              "type": ["object"]
            }
          }
        },
        "supported_sync_modes": ["full_refresh", "incremental"],
        "source_defined_cursor": true,
        "default_cursor_field": ["last_modified"]
      },
      "sync_mode": "full_refresh",
      "destination_sync_mode": "overwrite"
    },
    {
      "stream": {
        "name": "documents_incremental",
        "json_schema": {
          "$schema": "http://json-schema.org/draft-04/schema#",
          "type": "object",
          "properties": {
            "id": {
              "type": "string"
            },
            "key": {
              "type": "string"
            },
            "value": {
              "type": ["object"],
              "properties": {
                "rev": {
                  "type": ["null", "string"]
                }
              }
            },
            "doc": {
              "type": ["object"],
              "properties": {
                "last_modified": {
                  "type": "string",
                  "format": "date-time"
                }
              },
              "required": ["last_modified"]
            }
          }
        },
        "supported_sync_modes": ["incremental"],
        "source_defined_cursor": true,
        "default_cursor_field": ["last_modified"]
      },
      "sync_mode": "incremental",
      "destination_sync_mode": "append"
    }
  ]
}
